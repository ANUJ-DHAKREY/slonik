{
  "overrides": [
    {
      "extends": [
        "canonical"
      ],
      "files": "*.js",
      "rules": {
        "unicorn/prevent-abbreviations": 0
      }
    },
    {
      "files": "*.d.ts",
      "rules": {
        "filenames/match-regex": 0
      }
    },
    {
      "extends": [
        "canonical",
        "canonical/typescript"
      ],
      "files": "*.ts",
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "rules": {
        "require-atomic-updates": 0,
        "unicorn/prevent-abbreviations": 0
      }
    }
  ],
  "root": true
}